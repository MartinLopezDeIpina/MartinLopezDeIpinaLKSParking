<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="weekDays"
            type="java.lang.Integer[]"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="7"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <include
                layout="@layout/day_chip"
                bind:number='@{weekDays[0]}'
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                />
            <include
                layout="@layout/day_chip"
                bind:number='@{weekDays[1]}'
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                />
            <include
                layout="@layout/day_chip"
                bind:number='@{weekDays[2]}'
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                />
            <include
                layout="@layout/day_chip"
                bind:number='@{weekDays[3]}'
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                />
            <include
                layout="@layout/day_chip"
                bind:number='@{weekDays[4]}'
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                />
            <include
                layout="@layout/day_chip"
                bind:number='@{weekDays[5]}'
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                />
            <include
                layout="@layout/day_chip"
                bind:number='@{weekDays[6]}'
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                />
            <include
                layout="@layout/day_chip"
                bind:number='@{weekDays[7]}'
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                />
            <include
                layout="@layout/day_chip"
                bind:number='@{weekDays[8]}'
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                />
            <include
                layout="@layout/day_chip"
                bind:number='@{weekDays[9]}'
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                />
            <include
                layout="@layout/day_chip"
                bind:number='@{weekDays[10]}'
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                />
            <include
                layout="@layout/day_chip"
                bind:number='@{weekDays[11]}'
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                />
            <include
                layout="@layout/day_chip"
                bind:number='@{weekDays[12]}'
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                />
            <include
                layout="@layout/day_chip"
                bind:number='@{weekDays[13]}'
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                />
        </GridLayout>

    </LinearLayout>
</layout>
